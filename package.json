{
    "name": "academy-p5js-ts-global-mode-starter",
    "version": "0.1.0",
    "description": "A starter project for small p5js projects with TypeScript, configured for p5's 'global mode'.  Modified from https://github.com/Gaweph/p5-typescript-starter",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "run-p start-compile start-run",
        "start-compile": "tsc --watch",
        "compile-to-one-file": "tsc --outFile dist/singleFile.js",
        "start-run": "browser-sync start --server -w"
    },
    "homepage": "https://github.com/WeAreAcademy/academy-p5js-ts-global-mode-starter",
    "devDependencies": {
        "@types/p5": "^1.7.6",
        "browser-sync": "^2.27.9",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.5.4"
    }
}
